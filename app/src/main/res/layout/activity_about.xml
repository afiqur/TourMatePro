<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tour Mate"
        android:layout_marginBottom="20dp"
        android:textSize="50dp"
        android:textColor="@android:color/holo_purple"
        android:shadowColor="@android:color/holo_red_dark"/>

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Developed by"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="20sp"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/hello2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Md. Afiqur Rahman Piash"
        android:textColor="@android:color/holo_blue_light"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/hello3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Shaila Rahman Shammi"
        android:textColor="@android:color/holo_blue_light"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/hello4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Sazzad Rocky"
        android:textColor="@android:color/holo_blue_light"/>



</LinearLayout>
